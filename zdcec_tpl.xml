    <templates>
        <template>
            <template>Template domains and host certs expire check</template>
            <name>Template domains and host certs expire check</name>
            <description>Search and add domains and host certificates to Zabbix using the local database of the Bind server</description>
            <groups>
                <group>
                    <name>Templates</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Domains</name>
                </application>
                <application>
                    <name>Host certificates</name>
                </application>
            </applications>
            <discovery_rules>
                <discovery_rule>
                    <name>SSL host certs discovery</name>
                    <key>zdcec[listcerts]</key>
                    <delay>1h</delay>
                    <filter>
                        <conditions>
                            <condition>
                                <macro>{#COMNAME}</macro>
                                <value>{$CERT.COMMON_NAME.MATCHES}</value>
                                <formulaid>A</formulaid>
                            </condition>
                            <condition>
                                <macro>{#COMNAME}</macro>
                                <value>{$CERT.COMMON_NAME.NOT_MATCHES}</value>
                                <operator>NOT_MATCHES_REGEX</operator>
                                <formulaid>B</formulaid>
                            </condition>
                        </conditions>
                    </filter>
                    <lifetime>2d</lifetime>
                    <item_prototypes>
                        <item_prototype>
                            <name>SSL host cert {#COMNAME}. Last update</name>
                            <type>DEPENDENT</type>
                            <key>zdcec[cert,{#ID},CacheDate]</key>
                            <delay>0</delay>
                            <history>1d</history>
                            <trends>0</trends>
                            <value_type>CHAR</value_type>
                            <description>When the certificate information was updated</description>
                            <applications>
                                <application>
                                    <name>Host certificates</name>
                                </application>
                            </applications>
                            <application_prototypes>
                                <application_prototype>
                                    <name>ssl host cert {#COMNAME}</name>
                                </application_prototype>
                            </application_prototypes>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.CacheDate</params>
                                </step>
                            </preprocessing>
                            <master_item>
                                <key>zdcec[cert,{#ID}]</key>
                            </master_item>
                        </item_prototype>
                        <item_prototype>
                            <name>SSL host cert {#COMNAME}. Expire date</name>
                            <type>DEPENDENT</type>
                            <key>zdcec[cert,{#ID},ExpDate]</key>
                            <delay>0</delay>
                            <history>1d</history>
                            <trends>0</trends>
                            <value_type>CHAR</value_type>
                            <description>When the certificate information was updated</description>
                            <applications>
                                <application>
                                    <name>Host certificates</name>
                                </application>
                            </applications>
                            <application_prototypes>
                                <application_prototype>
                                    <name>ssl host cert {#COMNAME}</name>
                                </application_prototype>
                            </application_prototypes>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.ExpDate</params>
                                </step>
                            </preprocessing>
                            <master_item>
                                <key>zdcec[cert,{#ID}]</key>
                            </master_item>
                        </item_prototype>
                        <item_prototype>
                            <name>SSL host cert {#COMNAME}. Days before expiration</name>
                            <type>DEPENDENT</type>
                            <key>zdcec[cert,{#ID},ExpDays]</key>
                            <delay>0</delay>
                            <history>1d</history>
                            <trends>0</trends>
                            <applications>
                                <application>
                                    <name>Host certificates</name>
                                </application>
                            </applications>
                            <application_prototypes>
                                <application_prototype>
                                    <name>ssl host cert {#COMNAME}</name>
                                </application_prototype>
                            </application_prototypes>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.ExpDays</params>
                                </step>
                            </preprocessing>
                            <master_item>
                                <key>zdcec[cert,{#ID}]</key>
                            </master_item>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{last()}&lt;={$CERT.EXPIRE.ALERT:&quot;{#ISSUER}&quot;}</expression>
                                    <name>SSL host certificate &quot;{#COMNAME}&quot; expires on {#EXPDATE}.</name>
                                    <url>https://{{#HOSTS}.regsub(&quot;^([^,]+)&quot;, &quot;\1&quot;)}</url>
                                    <priority>HIGH</priority>
                                    <description>SSL certificate expires on {#EXPDATE}. &#13;
Days to expire: {#EXPDAYS}&#13;
&#13;
Subject: {#SUBJECT}&#13;
Issuer: {#ISSUER}, Serial: {#SERIAL}&#13;
&#13;
Used on Hosts: {#HOSTS}&#13;
&#13;
Last update: {#CACHEDATE}</description>
                                    <tags>
                                        <tag>
                                            <tag>ALERT</tag>
                                        </tag>
                                        <tag>
                                            <tag>CERT</tag>
                                        </tag>
                                        <tag>
                                            <tag>EXPIRE</tag>
                                        </tag>
                                    </tags>
                                </trigger_prototype>
                                <trigger_prototype>
                                    <expression>{last()}&lt;={$CERT.EXPIRE.WARNING:&quot;{#ISSUER}&quot;}</expression>
                                    <name>SSL host certificate &quot;{#COMNAME}&quot; expires on {#EXPDATE}.</name>
                                    <url>https://{{#HOSTS}.regsub(&quot;^([^,]+)&quot;, &quot;\1&quot;)}</url>
                                    <priority>WARNING</priority>
                                    <description>SSL certificate expires on {#EXPDATE}. &#13;
Days to expire: {#EXPDAYS}&#13;
&#13;
Subject: {#SUBJECT}&#13;
Issuer: {#ISSUER}, Serial: {#SERIAL}&#13;
&#13;
Used on Hosts: {#HOSTS}&#13;
&#13;
Last update: {#CACHEDATE}</description>
                                    <manual_close>YES</manual_close>
                                    <dependencies>
                                        <dependency>
                                            <name>SSL host certificate &quot;{#COMNAME}&quot; expires on {#EXPDATE}.</name>
                                            <expression>{Template domains and host certs expire check:zdcec[cert,{#ID},ExpDays].last()}&lt;={$CERT.EXPIRE.ALERT:&quot;{#ISSUER}&quot;}</expression>
                                        </dependency>
                                    </dependencies>
                                    <tags>
                                        <tag>
                                            <tag>CERT</tag>
                                        </tag>
                                        <tag>
                                            <tag>EXPIRE</tag>
                                        </tag>
                                        <tag>
                                            <tag>WARNINIG</tag>
                                        </tag>
                                    </tags>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                        <item_prototype>
                            <name>SSL host cert {#COMNAME}. Hosts that use this cert</name>
                            <type>DEPENDENT</type>
                            <key>zdcec[cert,{#ID},Hosts]</key>
                            <delay>0</delay>
                            <history>1d</history>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <applications>
                                <application>
                                    <name>Host certificates</name>
                                </application>
                            </applications>
                            <application_prototypes>
                                <application_prototype>
                                    <name>ssl host cert {#COMNAME}</name>
                                </application_prototype>
                            </application_prototypes>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.Hosts</params>
                                </step>
                            </preprocessing>
                            <master_item>
                                <key>zdcec[cert,{#ID}]</key>
                            </master_item>
                        </item_prototype>
                        <item_prototype>
                            <name>SSL host cert {#COMNAME}. Issuer</name>
                            <type>DEPENDENT</type>
                            <key>zdcec[cert,{#ID},Issuer]</key>
                            <delay>0</delay>
                            <history>1d</history>
                            <trends>0</trends>
                            <value_type>CHAR</value_type>
                            <applications>
                                <application>
                                    <name>Host certificates</name>
                                </application>
                            </applications>
                            <application_prototypes>
                                <application_prototype>
                                    <name>ssl host cert {#COMNAME}</name>
                                </application_prototype>
                            </application_prototypes>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.Issuer</params>
                                </step>
                            </preprocessing>
                            <master_item>
                                <key>zdcec[cert,{#ID}]</key>
                            </master_item>
                        </item_prototype>
                        <item_prototype>
                            <name>SSL host cert {#COMNAME}. Serial</name>
                            <type>DEPENDENT</type>
                            <key>zdcec[cert,{#ID},Serial]</key>
                            <delay>0</delay>
                            <history>1d</history>
                            <trends>0</trends>
                            <value_type>CHAR</value_type>
                            <applications>
                                <application>
                                    <name>Host certificates</name>
                                </application>
                            </applications>
                            <application_prototypes>
                                <application_prototype>
                                    <name>ssl host cert {#COMNAME}</name>
                                </application_prototype>
                            </application_prototypes>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.Serial</params>
                                </step>
                            </preprocessing>
                            <master_item>
                                <key>zdcec[cert,{#ID}]</key>
                            </master_item>
                        </item_prototype>
                        <item_prototype>
                            <name>SSL host cert {#COMNAME}. Subject</name>
                            <type>DEPENDENT</type>
                            <key>zdcec[cert,{#ID},Subject]</key>
                            <delay>0</delay>
                            <history>1d</history>
                            <trends>0</trends>
                            <value_type>CHAR</value_type>
                            <applications>
                                <application>
                                    <name>Host certificates</name>
                                </application>
                            </applications>
                            <application_prototypes>
                                <application_prototype>
                                    <name>ssl host cert {#COMNAME}</name>
                                </application_prototype>
                            </application_prototypes>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.Subject</params>
                                </step>
                            </preprocessing>
                            <master_item>
                                <key>zdcec[cert,{#ID}]</key>
                            </master_item>
                        </item_prototype>
                        <item_prototype>
                            <name>SSL host cert {#COMNAME}. Version</name>
                            <type>DEPENDENT</type>
                            <key>zdcec[cert,{#ID},Version]</key>
                            <delay>0</delay>
                            <history>1d</history>
                            <trends>0</trends>
                            <value_type>CHAR</value_type>
                            <applications>
                                <application>
                                    <name>Host certificates</name>
                                </application>
                            </applications>
                            <application_prototypes>
                                <application_prototype>
                                    <name>ssl host cert {#COMNAME}</name>
                                </application_prototype>
                            </application_prototypes>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.Version</params>
                                </step>
                            </preprocessing>
                            <master_item>
                                <key>zdcec[cert,{#ID}]</key>
                            </master_item>
                        </item_prototype>
                        <item_prototype>
                            <name>SSL host cert {#COMNAME}</name>
                            <key>zdcec[cert,{#ID}]</key>
                            <delay>3h</delay>
                            <history>0</history>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <applications>
                                <application>
                                    <name>Host certificates</name>
                                </application>
                            </applications>
                            <application_prototypes>
                                <application_prototype>
                                    <name>ssl host cert {#COMNAME}</name>
                                </application_prototype>
                            </application_prototypes>
                        </item_prototype>
                    </item_prototypes>
                </discovery_rule>
                <discovery_rule>
                    <name>Domains discovery</name>
                    <key>zdcec[listdomains]</key>
                    <delay>1h</delay>
                    <filter>
                        <conditions>
                            <condition>
                                <macro>{#DOMAIN}</macro>
                                <value>{$DOMAIN.MATCHES}</value>
                                <formulaid>A</formulaid>
                            </condition>
                            <condition>
                                <macro>{#DOMAIN}</macro>
                                <value>{$DOMAIN.NOT_MATCHES}</value>
                                <operator>NOT_MATCHES_REGEX</operator>
                                <formulaid>B</formulaid>
                            </condition>
                        </conditions>
                    </filter>
                    <lifetime>2d</lifetime>
                    <item_prototypes>
                        <item_prototype>
                            <name>Domain {#DOMAIN}. Last update</name>
                            <type>DEPENDENT</type>
                            <key>zdcec[domain,{#DOMAIN},CacheDate]</key>
                            <delay>0</delay>
                            <history>1d</history>
                            <trends>0</trends>
                            <value_type>CHAR</value_type>
                            <applications>
                                <application>
                                    <name>Domains</name>
                                </application>
                            </applications>
                            <application_prototypes>
                                <application_prototype>
                                    <name>Domain {#DOMAIN}</name>
                                </application_prototype>
                            </application_prototypes>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.CacheDate</params>
                                </step>
                            </preprocessing>
                            <master_item>
                                <key>zdcec[domain,{#DOMAIN}]</key>
                            </master_item>
                        </item_prototype>
                        <item_prototype>
                            <name>Domain {#DOMAIN}. Expre date</name>
                            <type>DEPENDENT</type>
                            <key>zdcec[domain,{#DOMAIN},ExpDate]</key>
                            <delay>0</delay>
                            <history>1d</history>
                            <trends>0</trends>
                            <value_type>CHAR</value_type>
                            <applications>
                                <application>
                                    <name>Domains</name>
                                </application>
                            </applications>
                            <application_prototypes>
                                <application_prototype>
                                    <name>Domain {#DOMAIN}</name>
                                </application_prototype>
                            </application_prototypes>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.ExpDate</params>
                                </step>
                            </preprocessing>
                            <master_item>
                                <key>zdcec[domain,{#DOMAIN}]</key>
                            </master_item>
                        </item_prototype>
                        <item_prototype>
                            <name>Domain {#DOMAIN}. Days to expire</name>
                            <type>DEPENDENT</type>
                            <key>zdcec[domain,{#DOMAIN},ExpDays]</key>
                            <delay>0</delay>
                            <history>1d</history>
                            <trends>0</trends>
                            <units>days</units>
                            <applications>
                                <application>
                                    <name>Domains</name>
                                </application>
                            </applications>
                            <application_prototypes>
                                <application_prototype>
                                    <name>Domain {#DOMAIN}</name>
                                </application_prototype>
                            </application_prototypes>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.ExpDays</params>
                                </step>
                            </preprocessing>
                            <master_item>
                                <key>zdcec[domain,{#DOMAIN}]</key>
                            </master_item>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{last()}&lt;={$DOMAIN.EXPIRE.ALERT}</expression>
                                    <name>Domain &quot;{#DOMAIN}&quot; expires on {#EXPDATE}.</name>
                                    <url>https://www.nic.ru/whois/?searchWord={#DOMAIN}</url>
                                    <priority>HIGH</priority>
                                    <description>Domain: {#DOMAIN}&#13;
&#13;
Expire date: {#EXPDATE}&#13;
Days to expire: {#EXPDAYS}&#13;
&#13;
Last update: {#CACHEDATE}</description>
                                    <tags>
                                        <tag>
                                            <tag>ALERT</tag>
                                        </tag>
                                        <tag>
                                            <tag>DOMAIN</tag>
                                        </tag>
                                        <tag>
                                            <tag>EXPIRE</tag>
                                        </tag>
                                    </tags>
                                </trigger_prototype>
                                <trigger_prototype>
                                    <expression>{last()}&lt;={$DOMAIN.EXPIRE.WARINIG}</expression>
                                    <name>Domain &quot;{#DOMAIN}&quot; expires on {#EXPDATE}.</name>
                                    <url>https://www.nic.ru/whois/?searchWord={#DOMAIN}</url>
                                    <priority>WARNING</priority>
                                    <description>Domain: {#DOMAIN}&#13;
&#13;
Expire date: {#EXPDATE}&#13;
Days to expire: {#EXPDAYS}&#13;
&#13;
Last update: {#CACHEDATE}</description>
                                    <manual_close>YES</manual_close>
                                    <dependencies>
                                        <dependency>
                                            <name>Domain &quot;{#DOMAIN}&quot; expires on {#EXPDATE}.</name>
                                            <expression>{Template domains and host certs expire check:zdcec[domain,{#DOMAIN},ExpDays].last()}&lt;={$DOMAIN.EXPIRE.ALERT}</expression>
                                        </dependency>
                                    </dependencies>
                                    <tags>
